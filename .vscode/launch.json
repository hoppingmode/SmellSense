{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug: wi-fi device",
      "type": "dart",
      "request": "launch",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      },
      "program": "lib/main.dart",
      "deviceId": "SM A245F",
      "flutterMode": "debug",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "debug: virtual device",
      "type": "dart",
      "request": "attach",
      "deviceId": "emulator-5554",
      "program": "lib/main.dart",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 2
      },
      "preLaunchTask": "adb: launch virtual device",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "debug: wi-fi device (release)",
      "type": "dart",
      "request": "launch",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 3
      },
      "program": "lib/main.dart",
      "deviceId": "SM A245F",
      "flutterMode": "release",
      "showMemoryUsage": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "flutter: run tests",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/test",
      "args": ["--coverage", "--reporter=expanded"]
    }
  ]
}
